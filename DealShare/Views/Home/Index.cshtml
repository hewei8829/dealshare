<div id="wrapper" class="active">

    <div class="row">
        <div class="col-md-2 col-xs-2 sidebar2">
            <span href="#" style="background-color:white !important">
                <span class="pull-right" id="slide-submenu">
                    <i class="fa-window-close"></i>
                </span>
            </span>
            <div class="logo text-center">
                <img src="~/Image/Head.jpg" class="img-responsive center-block" alt="Logo">
                <h4>Wei He</h4>
                <div class="coins">
                    <i class="fa fa-dollar" aria-hidden="true"></i>
                </div>
                <p class="coins">100</p>
                <div>
                    <button type="button" class="btn btn-default Add-friend">
                        LogIn
                    </button>
                    <button type="button" class="btn btn-default Add-friend">
                        LogIn
                    </button>
                </div>
            </div>
            <br>
            <div class="left-navigation">
                <ul class="list">
                    <li><i class="fa fa-thumbs-up" aria-hidden="true"></i><a href="#">Active</a></li>
                    <li><i class="fa fa-thumbs-up" aria-hidden="true"></i><a href="#">Active</a></li>
                    <li><i class="fa fa-hand-o-right" aria-hidden="true"></i><a href="#">Active</a></li>
                    <li><i class="fa fa-trophy" aria-hidden="true"></i><a href="#">Active</a></li>
                    <li><i class="fa fa-certificate" aria-hidden="true"></i><a href="#">Active</a></li>
                    <li><i class="fa fa-users" aria-hidden="true"></i><a href="#">Active</a></li>
                    <li><i class="fa fa-bar-chart" aria-hidden="true"></i><a href="#">Active</a></li>

                </ul>
            </div>
        </div>
        <div class="col-md-offset-2 col-md-10 col-xs-offset-1 col-xs-11 main-content" style="background-image:url(../../Image/Shopping.jpg)">
            <div class="container" style="padding:100px 20px 200px 10px">
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <div class="input-group" id="adv-search">
                            <input type="text" class="form-control" placeholder="Search for snippets" />
                            <div class="input-group-btn">
                                <div class="btn-group" role="group">
                                    <div class="dropdown dropdown-lg">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                                        <div class="dropdown-menu dropdown-menu-right" role="menu">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group">
                                                    <label for="filter">Filter by</label>
                                                    <select class="form-control">
                                                        <option value="0" selected>All Deals</option>
                                                        <option value="1">Most popular</option>
                                                        <option value="2">NearBy Location</option>
                                                        <option value="3">Top rated</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">Contains the words</label>
                                                    <input class="form-control" type="text" />
                                                </div>
                                                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                            </form>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10 col-xs-11 col-xs-offset-1" style="background-color:white">
        <div class="col-md-12 col-xs-12">
            <div class="jumbotron" style="padding-left:0; margin:0;background-color:white">
                <div ng-app="ShowItems">
                    <div class="row" ng-controller="AppController">
                        <ul style="list-style-type:none;">
                            <li ng-repeat="item in items.itemList">
                                <div class="col-md-2 col-xs-4">
                                    <div class="thumbnail" style="padding:0; margin:0; border:0;">
                                        <a href="https://www.bing.com/"><img class="resize" src="{{item.ImageUrl}}"></a>
                                        <div class="caption">
                                            <h3 style="text-align:left; font-size:12px;">{{item.ShortName}}</h3>
                                            <p style="text-align:left; font-size:10px">{{item.Description}}</p>
                                        </div>
                                        <div class="modal-footer" style="text-align: left">
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 10%;">
                                                    <span class="sr-only">60% Complete</span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4"><b>200</b><br /><small>Price</small></div>
                                                <div class="col-md-4"><b>50</b><br /><small>Discount</small></div>
                                                <div class="col-md-4"><b>10</b><br /><small>Rating</small></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@*</div>*@

<script>
    $(function () {

        $('#slide-submenu').on('click', function () {
            $(this).closest('.list-group').fadeOut('slide', function () {
                $('.mini-submenu').fadeIn();
            });

        });

        $('.mini-submenu').on('click', function () {
            $(this).next('.list-group').toggle('slide');
            $('.mini-submenu').hide();
        })
    })


</script>